<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>管理員</title>
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/fontawesome-free-5.15.1-web/css/all.css" rel="stylesheet" />
    <link href="~/Content/PagedList.css" rel="stylesheet" />
</head>
<body>
    <nav class="pl-md-5 navbar navbar-expand-md navbar-dark bg-danger flex-column flex-md-row bd-navbar">
        <div class="navbar-brand "><img class="pb-3" style="width:45px;" src="~/img/EZ_GO_logo.png" /><span class="navbar-brand">理財EZgo</span></div>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <ul class="navbar-nav mr-auto">
                @if (Session["Authority"] != null)
                {
                    if (Session["Authority"].ToString().Contains("A"))
                    {
                        <li class="nav-item">@Html.ActionLink("管理權限", "AuthIndex", "Back", new { }, new { @class = "btn btn-danger" })</li>
                    }
                    if (Session["Authority"].ToString().Contains("B"))
                    {
                        <li class="nav-item">@Html.ActionLink("查詢會員", "Violmember", "Back", new { }, new { @class = "btn btn-danger" })</li>
                    }
                    if (Session["Authority"].ToString().Contains("C"))
                    {
                        <li class="nav-item">@Html.ActionLink("檢舉狀態", "Violmes", "Back", new { }, new { @class = "btn btn-danger" })</li>
                    }
                    if (Session["Authority"].ToString().Contains("D"))
                    {
                        <li class="nav-item">@Html.ActionLink("管理影音文章", "ArtiIndex", "Back", new { }, new { @class = "btn btn-danger" }) </li>
                    }
                    @*if (Session["Authority"].ToString().Contains("B"))
                    {
                        <li class="nav-item">@Html.ActionLink("管理廣告", "AD", "Back", new { }, new { @class = "btn btn-danger" })</li>
                    }*@

                }
            </ul>
            <ul class="navbar-nav navbar-right d-flex align-items-center">
                @if (Session["Authority"] != null)
                {
                    if (Session["Authority"].ToString().Contains("A"))
                    {
                <li class="nav-item  fas fa-user-tie btn-danger"> 最高管理員 @Session["MaAct"]，歡迎光臨</li>
                    }
                    else
                    {
            <li class="nav-item  fas fa-user-tie btn-danger"> 管理員 @Session["MaAct"]，歡迎光臨</li>
                    }

                    <li class="nav-item">@Html.ActionLink("登出", "Logout", "Back", new { }, new { @class = "btn btn-danger" })</li>
                }
                else { 
                    <li class="nav-item">@Html.ActionLink("登入", "Login", "Back", new { }, new { @class = "btn btn-danger" })</li>
                }
            </ul>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - 理財EZGO，請尊重智慧財產權</p>
        </footer>
    </div>
</body>
</html>
