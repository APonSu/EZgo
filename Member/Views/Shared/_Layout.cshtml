<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title  理財EZgo</title>
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/StStyle.css" rel="stylesheet" />
    <link href="~/fontawesome-free-5.15.1-web/css/all.css" rel="stylesheet" />
    <link rel="Shortcut Icon" href="~/favicon.ico.png" />
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <link href="~/Content/PagedList.css" rel="stylesheet" />
    <style>
        .main {
            position: absolute;
            left: 0;
            right: 0;
            _width: 100%;
        }
    </style>
</head>

<body>
    <nav class="pl-md-5 navbar navbar-expand-md navbar-dark bg-danger flex-column flex-md-row bd-navbar">
        <div class="navbar-brand "><img class="pb-3" style="width:45px;" src="~/img/EZ_GO_logo.png" />@Html.ActionLink("理財EZgo", "ShowStock", "Home", "", new { @class = "navbar-brand m-0" })</div>
        <form method="get" action="@Url.Action("ShowStock", "Home","")" class="mr-2 ">
            <div class=" mx-auto btn-group">
                <input type="text" list="ser" id="search" name="stid" class="form-control flex-grow-1 border-white" autocomplete="off" placeholder="輸入股票名稱或代號" />
                <button id="S1" type="submit" class="btn bg-white w-25" style="margin-left:-20px">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </form>
        <button class="navbar-toggler mt-2" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto d-flex align-items-center">
                <li class="nav-item">@Html.ActionLink(" 選股", "ChStock", "Home", "", new { @class = "btn btn-danger fas fa-chart-line" })</li>
                <li class="nav-item"><button class="btn btn-danger fas" type="button" data-toggle="collapse" data-target="#navStItem" aria-expanded="false"><i class="fas fa-clipboard-list pr-1"></i>行業類股</button></li>
                <li class="nav-item">@Html.ActionLink(" 影音文章", "Arti", "Home", "", new { @class = "btn btn-danger fas fa-photo-video" })</li>
                <li class="nav-item">@Html.ActionLink(" 新手選股", "NewQuestion", "Home","", new { @class = "btn btn-danger fas fa-kiwi-bird a1" @*,@data-toggle = "tooltip",@data-html = "true", @title ="<em>Tooltip</em> <u>with</u> <b>HTML</b>",@id="tool"*@ })</li>
            </ul>
            @Html.Partial("_LayoutLogin")
        </div>
    </nav>
    <div class="container body-content">
        <div class=" main">
            <div class="collapse pt-1 pb-3 bg-danger" id="navStItem" style="text-align: center;">
                <a href="/Home/st?inid=1" class="btn btn-outline-light m-1">水泥</a>
                <a href="/Home/st?inid=2" class="btn btn-outline-light m-1">食品</a>
                <a href="/Home/st?inid=3" class="btn btn-outline-light m-1">塑膠</a>
                <a href="/Home/st?inid=4" class="btn btn-outline-light m-1">紡織</a>
                <a href="/Home/st?inid=5" class="btn btn-outline-light m-1">電機</a>
                <a href="/Home/st?inid=6" class="btn btn-outline-light m-1">玻璃</a>
                <a href="/Home/st?inid=7" class="btn btn-outline-light m-1">造紙</a>
                <a href="/Home/st?inid=8" class="btn btn-outline-light m-1">鋼鐵</a>
                <a href="/Home/st?inid=9" class="btn btn-outline-light m-1">橡膠</a>
                <a href="/Home/st?inid=10" class="btn btn-outline-light m-1">汽車</a>
                <a href="/Home/st?inid=11" class="btn btn-outline-light m-1">營造</a>
                <a href="/Home/st?inid=12" class="btn btn-outline-light m-1">運輸</a>
                <a href="/Home/st?inid=13" class="btn btn-outline-light m-1">觀光</a>
                <a href="/Home/st?inid=14" class="btn btn-outline-light m-1">生技</a>
                <a href="/Home/st?inid=15" class="btn btn-outline-light m-1">油電</a>
                <a href="/Home/st?inid=16" class="btn btn-outline-light m-1">燃氣</a>
            </div>
        </div>
        <div class="jumbotron ">
            <div class="container">
                <h3 class="p-3 mt-3 text-muted text-center"></h3>
            </div>
        </div>

        @RenderBody()

        <hr />
        <footer class="page-footer font-smalllighten-3 pt-2 main">
            <div class="container">
                <div class="row">

                    @{
                        List<string> adPath = new List<string>();
                        DirectoryInfo dir = new DirectoryInfo(Server.MapPath("~/img_AD"));
                        FileInfo[] fInfo = dir.GetFiles();
                        foreach (FileInfo result in fInfo)
                        {
                            adPath.Add(result.Name);
                        }
                        for (int i = 0; i < adPath.Count; i++)
                        {
                            <div class="col-lg-2 col-md-12 mb-4">
                                <div class="view overlay z-depth-1-half">
                                    <img src="../../img_AD/@adPath[i]" class="img-fluid"
                                         alt="">
                                    <a href="">
                                        <div class="mask rgba-white-light"></div>
                                    </a>
                                </div>
                            </div>
                        }
                    }

                </div>
            </div>
            <!-- Copyright -->
            <div class="footer-copyright text-center pt-1 pb-2 ">
                <div class=" text-black-50 text-center">&copy; @DateTime.Now.Year -<img class="align-baseline" src="~/favicon.ico.png" /> 理財EZgo</div>
            </div>
            <!-- icon link -->
            <ul class="list-unstyled list-inline text-center mb-0 bg-danger">
                <li class="list-inline-item">
                    <a class="btn-floating btn-fb mx-1" style="color:white">
                        <i class="fab fa-facebook-f"> </i>
                    </a>
                </li>
                <li class="list-inline-item">
                    <a class="btn-floating btn-tw mx-1" style="color:white">
                        <i class="fab fa-twitter"> </i>
                    </a>
                </li>
                <li class="list-inline-item">
                    <a class="btn-floating btn-gplus mx-1" style="color:white">
                        <i class="fab fa-google-plus-g"> </i>
                    </a>
                </li>
                <li class="list-inline-item">
                    <a class="btn-floating btn-li mx-1" style="color:white">
                        <i class="fab fa-linkedin-in"> </i>
                    </a>
                </li>
                <li class="list-inline-item">
                    <a class="btn-floating btn-dribbble mx-1" style="color:white">
                        <i class="fab fa-dribbble"> </i>
                    </a>
                </li>
            </ul>

        </footer>
    </div>
    <script>
        //搜尋欄
        $(document).ready(function () {
            var search = $("#search");
            search.keyup(function () {
                var searchText = $("#search").val();
                console.log(searchText.length);
                if (searchText.length >= 4)
                    $("#search").html("");
                else if (searchText != "") {
                    $.ajax({
                        type: 'get',
                        url: '../../pp.json',
                        success: function (da) {
                            var data = "<datalist id='ser'>";
                            for (var i = 0; i < da.length; i++) {
                                data += "<option value=" + da[i].StId + " label=" + da[i].StName + "></option>";

                            }
                            data += "</datalist>";
                            $("#search").html(data);
                        },
                        error: function () {
                            $('#search').text('資料有誤');
                        }
                    });
                }
                else
                    $("#search").html("");
            })
        });
        //非會員隱藏按鍵功能
        @if (Session["result"] == null) {
            <text>
                $(".a1").attr('disabled', 'disabled').addClass('btn disabled');
            </text>
         }

    </script>
</body>
</html>
