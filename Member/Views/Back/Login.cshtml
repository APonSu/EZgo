@model Member.Models.Mager
@{
    ViewBag.Title = "管理員登入";
}

<h3 class="p-3 mt-3 text-muted">管理員登入</h3>

@using (Html.BeginForm("Login", "Back", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="form-horizontal">

        <hr />
        <div class="form-group">
            <p class="control-label col-md-2">帳號：</p>
            <div class="col-md-3 col-9 w-auto">
                @Html.EditorFor(model => model.MaAct, new { htmlAttributes = new { @class = "form-control", @placeholder = "請輸入帳號" }, @required="required"})
            </div>
        </div>

        <div class="form-group">
            <p class="control-label col-md-6">密碼：</p>
            <div class="col-md-3 col-9 w-auto">
                @Html.EditorFor(model => model.MaPwd, new { htmlAttributes = new { @class = "form-control", @placeholder = "請輸入密碼", @required = "required" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="登入" class="btn btn-secondary" />
            </div>

        </div>
        @ViewBag.Message

    </div>
}
